{
  "name": "spree-foundation",
  "version": "1.0.0",
  "description": "Design System Foundation",
  "main": "index.js",
  "scripts": {
    "build": "npm run build-styles && npm run build templates",
    "build-styles": "node-sass src/styles/index.scss --output dist/",
    "build-templates": "nunjucks *.njk --path src/templates --out dist",
    "serve": "browser-sync start --cwd dist/ --server --port 3004",
    "start": "npm run build && npm run serve & npm run watch",
    "watch": "chokidar 'src/**/*.{njk,scss}' -c 'npm run build && browser-sync reload --port 3004'"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "browser-sync": "^2.26.7",
    "chokidar-cli": "^2.1.0",
    "node-sass": "^4.13.1",
    "nunjucks-cli": "^1.0.0",
    "prettier": "^1.19.1"
  }
}
