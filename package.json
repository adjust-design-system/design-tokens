{
  "name": "adjust-design-tokens",
  "version": "0.0.1",
  "description": "Adjust Design Tokens",
  "main": "",
  "scripts": {
    "clear": "rm -rf docs && mkdir -p docs/images",
    "copy": "cp src/images/* docs/images/",
    "build": "npm run copy && npm run build-templates && npm run build-styles",
    "build-styles": "sass src/styles/screen.scss docs/screen.css --no-source-map",
    "build-templates": "nunjucks *.njk --path src/templates --out docs",
    "serve": "browser-sync start --server docs/ --files docs --port 3004 --no-notify --no-ui",
    "start": "npm run clear && npm run build && npm run serve & npm run watch",
    "watch": "chokidar 'src/**/*.{njk,scss}' -c 'npm run build && browser-sync reload --port 3004'"
  },
  "author": "Adjust Design System Team",
  "license": "ISC",
  "devDependencies": {
    "browser-sync": "^2.26.7",
    "chokidar-cli": "^2.1.0",
    "nunjucks-cli": "^1.0.0",
    "prettier": "^1.19.1",
    "sass": "^1.26.3"
  }
}
